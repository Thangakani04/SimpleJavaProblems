package Problems;

public class SumOfArray {

	public static void main(String[] args) {
		
		int a[] = {9,2,7,6,4};
		int sum =0;
		
		//Logic 2 - Normal for loop
		
		/*for(int i=0; i<= a.length-1;i++) {  //a.length= 5 
			sum = sum+a[i];
		}*/
		
		//Logic 2 - Enhanced for loop or for each loop
		
		//Advantage of enhanced for loop is no need to specify any initialization and incrementation
		//It will automatically repeat loop multiple times depends on the number of values 
		//It will stop as soon as it really end up this and it finds no more elements then it will exit from the loop
		for(int value:a) {
			sum = sum + value;
		}
		
		System.out.println("Sum of elements is: " + sum);



	}

}
